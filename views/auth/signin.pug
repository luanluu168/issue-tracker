extends layout.pug 

block content
    //- Sign in
    div(class='container-sm pt-3 pb-5 mx-4')
        if error
            h4.d-flex.justify-content-center.alert.alert-secondary.font-weight-bold.text-danger.text-center !{error}
        div(class='d-flex justify-content-center align-items-center')
            div(class='card my-0 py-2')
                div(class='mx-auto mb-2')
                    img(src='/assets/web-logo-only.png' alt='LogoImg')
                div
                    h3(class='text-center') Sign In
                div(class='card-body')
                    form(name='signinForm' action='/auth/server/signin/query' method='POST')
                        .col-auto
                            label.sr-only(for='signin-input-user-email') Email
                            //- idea h6 Email show up when focus
                            div(class='input-group form-group')
                                div(class='input-group-prepend')
                                span(class='input-group-text')
                                    i.fa.fa-envelope(aria-hidden='true')
                                input(type='email' class='form-control' name='userEmail' id='signin-input-user-email' placeholder='Enter your email' required
                                        pattern="[a-z0-9._%+-]+@[a-z.-]+\.[a-z]{2,4}$" 
                                        onchange="try{setCustomValidity('')}catch(e){}" 
                                        oninvalid="this.setCustomValidity('Not valid email')" 
                                        oninput="this.setCustomValidity(' ')" aria-expanded="true")
                        .col-auto
                            label.sr-only(for='signin-input-user-password') Password
                            div(class='input-group form-group')
                                div(class='input-group-prepend')
                                span(class='input-group-text')
                                    i(class='fas fa-key')
                                input(type='password' class='form-control' name='userPassword' id='signin-input-user-password' placeholder='Enter your password' required='')
                        .col-auto
                            div(class='input-group form-group')
                                button(type='submit' name="signin-submit" class='auth-button') Sign-in &#8594;

                    .col-auto
                        p(class='cross-middle-line-text') or
                        div(class='text-center mb-3')
                            a(class='google-auth-button' href='/auth/server/auth/google' role='button')
                                img(class='google-auth-img' alt='google-auth-img' src='/assets/Google__G__Logo.svg.webp')
                                div(class='ml-2') Sign-in with Google
                        p(class='cross-middle-line-text') not have an account yet?
                        div(class='text-center')
                            a(href='/auth/server/signup') Sign-up